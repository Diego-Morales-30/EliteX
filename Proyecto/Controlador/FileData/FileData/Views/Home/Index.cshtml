            </div>

            <!-- Menú Usuarios -->
            <div class="menu-row">
                <a href="#" class="menu-item menu-item-full has-submenu" id="btn-usuarios">
                    Usuarios
                </a>
            </div>

            <!-- Submenú Usuarios -->
            <div class="menu-submenu" id="submenu-usuarios">
                <a href="#" class="submenu-item" id="btn-listar-usuario">Listar Usuarios</a>
                <a href="#" class="submenu-item" id="btn-crear-usuario">Crear Usuario</a>
                <a href="#" class="submenu-item" id="btn-consultar-usuario">Consultar Usuario</a>
            </div>

