@{
    ViewData["Title"] = "Menú Principal - EliteX";
}

<link rel="stylesheet" href="~/Estilos/MenuAzul.css" />
<link rel="stylesheet" href="~/Estilos/MenuLateral.css" />

<div class="menu-container">
    <header class="menu-header">
        <div class="menu-logo">ELITEX</div>
        <div class="user-info-header">
            <p>
                <strong>Nombre:</strong> Diego Morales
                <span class="separator">|</span>
                <strong>Rol:</strong> Administrador
            </p>
        </div>
    </header>

    <aside class="menu-sidebar">
        <nav class="menu-nav-vertical">
            <!-- Fila 1 -->
            <div class="menu-row">
                <a href="#" class="menu-item" id="btn-inicio">Inicio</a>
                <a href="#" class="menu-item" id="btn-horarios">Horarios</a>
            </div>

            <!-- Fila 2 - Botón Empleados -->
            <div class="menu-row">
                <a href="#" class="menu-item menu-item-full has-submenu" id="btn-empleados">
                    Empleados
                </a>
            </div>

            <!-- Submenú Empleados -->
            <div class="menu-submenu" id="submenu-empleados">
                <a href="#" class="submenu-item" id="btn-listar-empleados">Listar Empleados</a>
                <a href="#" class="submenu-item" id="btn-crear-empleado">Crear Empleado</a>
                <a href="#" class="submenu-item" id="btn-consultar-empleado">Consultar Empleado</a>
            </div>

            <!-- Fila 3 -->
            <div class="menu-row">
                <a href="#" class="menu-item" id="btn-reportes">Reportes</a>
                <a href="#" class="menu-item" id="btn-configuracion">Configuración</a>
            </div>

            <!-- Fila 4 -->
            <div class="menu-row">
                <a href="#" class="menu-item menu-item-full" id="btn-salir">Salir</a>
            </div>
        </nav>
    </aside>

    <main class="menu-dashboard">
        <div id="dashboard-content" class="dashboard-scroll">
            <h1>Dashboard</h1>
            <p>Bienvenido al panel principal de EliteX.</p>
        </div>
    </main>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Toggle submenú Empleados con animación
        $("#btn-empleados").click(function (e) {
            e.preventDefault();
            $("#submenu-empleados").slideToggle(200).toggleClass("active");
            $(this).toggleClass("active");
        });

        // Botón Inicio
        $("#btn-inicio").click(function (e) {
            e.preventDefault();
            $("#dashboard-content").html(`
                <h1>Dashboard</h1>
                <p>Bienvenido al panel principal de EliteX.</p>
            `);
        });

        // Botón Listar Empleados - AJAX
        $("#btn-listar-empleados").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Listar/ListarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar la lista de empleados.</p>");
                }
            });
        });

        // Botón Crear Empleado - AJAX
        $("#btn-crear-empleado").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Empleado/RegistrarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar el formulario de creación.</p>");
                }
            });
        });

        // Botón Actualizar Empleado - AJAX
        $("#btn-actualizar-empleado").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Empleado/ActualizarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar la actualización de empleados.</p>");
                }
            });
        });

        // Botón Consultar Empleado - AJAX
        $("#btn-consultar-empleado").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Consultar/ConsultarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar la consulta de empleados.</p>");
                }
            });
        });

        // Botón Horarios - AJAX
        $("#btn-horarios").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Horarios/RegistrarHorario',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar los horarios.</p>");
                }
            });
        });

        // Botón Reportes (aquí deberías agregar funcionalidad AJAX para cargar reportes cuando tengas la ruta)

        // Botón Configuración (idem para configuración)

        // Botón Salir
        $("#btn-salir").click(function (e) {
            e.preventDefault();
            if (confirm("¿Está seguro que desea salir?")) {
                window.location.href = '/Home/Logout';
            }
        });
    });
</script>
