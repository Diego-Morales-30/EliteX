@{
    ViewData["Title"] = "Menú Principal - EliteX";
}

<link rel="stylesheet" href="~/Estilos/MenuAzul.css" />

<div class="menu-container">
    <header class="menu-header">
        <div class="menu-logo">ELITEX</div>
        <div class="user-info-header">
            <p>
                <strong>Nombre:</strong> Diego Morales
                <span class="separator">|</span>
                <strong>Rol:</strong> Administrador
            </p>
        </div>
    </header>

    <aside class="menu-sidebar">
        <nav class="menu-nav-vertical">
            <a href="#" class="menu-item" id="btn-inicio">Inicio</a>
            <a href="#" class="menu-item" id="btn-listar">Listar Empleados</a>
            <a href="#" class="menu-item" id="btn-consultar">Consultar Empleado</a>
            <a href="#" class="menu-item" id="btn-configurar">Registrar Empleado</a>
            <a href="#" class="menu-item" id="btn-registrar">Registrar Horario</a>
            <a href="#" class="menu-item">Salir</a>
        </nav>
    </aside>

    <main class="menu-dashboard">
        <div id="dashboard-content" class="dashboard-scroll">
            <h1>Dashboard</h1>
            <p>Bienvenido al panel principal de EliteX.</p>
        </div>
    </main>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {

        // Botón: Listar Empleados
        $("#btn-listar").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Listar/ListarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar la lista de empleados.</p>");
                }
            });
        });

        // Botón: Consultar Empleado
        $("#btn-consultar").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Consultar/ConsultarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar la consulta de empleados.</p>");
                }
            });
        });

        // Botón: Registrar Empleado
        $("#btn-configurar").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Empleado/RegistrarEmpleado',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar la vista de configuración.</p>");
                }
            });
        });

        // Botón: Registrar Horario
        $("#btn-registrar").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Horarios/RegistrarHorario',
                type: 'GET',
                success: function (result) {
                    $("#dashboard-content").html(result);
                },
                error: function () {
                    $("#dashboard-content").html("<p style='color:red;'>Error al cargar el registro de horario.</p>");
                }
            });
        });

        // Botón: Inicio
        $("#btn-inicio").click(function (e) {
            e.preventDefault();
            $("#dashboard-content").html(`
                <h1>Dashboard</h1>
                <p>Bienvenido al panel principal de EliteX.</p>
            `);
        });
    });
</script>
