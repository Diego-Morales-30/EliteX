@{
    ViewData["Title"] = "Menú Principal - EliteX";
}

<link rel="stylesheet" href="~/Estilos/MenuAzul.css" />
<link rel="stylesheet" href="~/Estilos/MenuLateral.css" />
<link rel="stylesheet" href="~/Estilos/Reloj.css" />

<div id="reloj-fixed" role="timer" aria-live="polite" aria-atomic="true">
    <div id="reloj-inner">
        <div id="reloj-time">
            <span id="reloj-hm">00:00</span>
            <span id="reloj-seg">00</span>
        </div>
        <div id="reloj-date">—</div>
    </div>
</div>
<div class="menu-container">
    <header class="menu-header">
        <div class="menu-logo">ELITEX</div>
        <div class="user-info-header">
            <p>
                <strong>Nombre:</strong> Diego Morales
                <span class="separator">|</span>
                <strong>Rol:</strong> Administrador
            </p>
        </div>
    </header>

    <aside class="menu-sidebar">
        <nav class="menu-nav-vertical">
            <!-- Fila 1 -->
            <div class="menu-row">
                <a href="#" class="menu-item" id="btn-inicio">Inicio</a>
