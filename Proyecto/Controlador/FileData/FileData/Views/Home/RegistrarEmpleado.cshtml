@model FileData.Models.Empleado
@{
    ViewData["Title"] = "Registrar Empleado";
}

<form asp-controller="Home" asp-action="Registrar" method="post" class="form-empleado">
}

<link rel="stylesheet" href="~/Estilos/RegistroDis.css" />

<div class="menu-dashboard fadeIn">
    <h1 class="titulo-azul">Registrar Empleado</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alerta-error">@ViewBag.Error</div>
    }

    @if (ViewBag.Exito != null)
    {
        <div class="alerta-exito">@ViewBag.Exito</div>
    }

    <form asp-action="Registrar" method="post" class="form-empleado">
        <div class="form-grid">
            <!-- Columna izquierda -->
            <div class="columna">
                <div class="form-group">
                    <label>Nombre:</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Apellidos:</label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Ingrese apellidos" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fecha de Nacimiento:</label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Edad:</label>
                    <input asp-for="Edad" type="number" class="form-control" placeholder="Ej: 25" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
            </div>

            <!-- Columna derecha -->
            <div class="columna">
                <div class="form-group">
                    <label>Estado Civil:</label>
                    <select asp-for="EstadoCivil" class="form-control">
                        <option value="">Seleccione</option>
                        <option>Soltero</option>
                        <option>Casado</option>
                        <option>Divorciado</option>
                        <option>Viudo</option>
                    </select>
                    <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Correo Electrónico:</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="ejemplo@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Teléfono:</label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ej: 987654321" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>DNI:</label>
                    <input asp-for="Dni" class="form-control" maxlength="8" placeholder="8 dígitos" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="contenedor-boton">
            <button type="submit" class="btn-glass">Registrar Empleado</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


