@model IEnumerable<FileData.Models.Empleado>

<link rel="stylesheet" href="~/Estilos/DashListar.css" />

<div class="tabla-container">
    <h1 class="titulo-lista">📋 Listado de Empleados</h1>

    <table class="tabla-empleados">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre Completo</th>
                <th>Fecha Nacimiento</th>
                <th>Edad</th>
                <th>Estado Civil</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>DNI</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empleado in Model)
            {
                <tr>
                    <td>@empleado.IdEmpleado</td>
                    <td>@empleado.Nombre @empleado.Apellidos</td>
                    <td>@empleado.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                    <td>@empleado.Edad</td>
                    <td>@empleado.EstadoCivil</td>
                    <td>@empleado.Email</td>
                    <td>@empleado.Telefono</td>
                    <td>@empleado.Dni</td>
                </tr>
            }
        </tbody>
    </table>
</div>
