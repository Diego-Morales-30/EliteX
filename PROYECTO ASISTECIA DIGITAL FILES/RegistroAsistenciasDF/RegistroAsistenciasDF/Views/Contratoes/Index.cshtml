@model IEnumerable<RegistroAsistenciasDF.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sueldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoHorarioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sueldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoHorarioNavigation.IdTipoHorario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdContrato">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdContrato">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdContrato">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
